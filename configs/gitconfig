[core]
  excludesfile = ~/.gitignore
  editor = subl -n -w
  trustctime = false
  eol = lf
  autocrlf = input

[user]
  name = Jonas Friedmann
  email = j@frd.mn

[merge]
  log = true
  tool = sublime

[push]
  default = simple

[difftool]
  prompt = false
  tool = vimdiff

[mergetool]
  prompt = false

[filter "media"]
  required = true
  clean = git media clean %f
  smudge = git media smudge %f

[alias]
  s = status
  l = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  hub = !"open $(git config --get remote.origin.url | sed 's/git@//g' | sed 's/github.com:/http:\\/\\/github.com\\//g')"

[mergetool "sublime"]
  cmd = subl -w $MERGED
  trustExitCode = false

[filter "hawser"]
  clean = git hawser clean %f
  smudge = git hawser smudge %f
  required = true

[filter "lfs"]
  clean = git lfs clean %f
  smudge = git lfs smudge %f
  required = true

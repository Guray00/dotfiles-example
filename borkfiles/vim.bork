# Check if powerline is installed
package="git+git://github.com/Lokaltog/powerline"
if pip list | egrep "[pP]owerline" &> /dev/null; then
	echo "ok: pip ${package}";
else
	echo "missing: pip ${package}"
	bake pip install git+git://github.com/Lokaltog/powerline >/dev/null
	echo "ok: pip ${package}"
fi
